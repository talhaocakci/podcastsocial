<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/whitealphabackground"
    android:layout_width="match_parent" android:layout_height="70sp">

<LinearLayout
    android:layout_width="wrap_content" android:id="@+id/buttons"
    android:layout_alignParentRight="true"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <com.javathlon.memsoft.FontelloTextView
        android:id="@+id/whatsapp"
        android:maxLines="3"
        android:singleLine="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:text="@string/sendwhatsapp"
        style="@style/TextViewAppearance.DisplayThemed"
        android:textSize="16sp" />

    <com.javathlon.memsoft.FontelloTextView
        android:id="@+id/uploadNoteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:text="@string/material_share"
        style="@style/TextViewAppearance.DisplayThemed"
        android:textSize="24sp" />

</LinearLayout>

    <com.javathlon.memsoft.RobotoTextView
        android:id="@+id/noteText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"

        android:maxLines="3"
        android:text="Baya uzun string gelecek buraya"
        android:textColor="@color/material_blue_grey_700"
        android:textSize="18sp"
        android:layout_gravity="top"
        android:layout_toLeftOf="@id/buttons"/>


</RelativeLayout>
