<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">
            <Button
                android:id="@+id/full_upgrade_button"
                android:onClick="onUpgradeAppButtonClicked"
                android:background="@color/main_color_100"
                android:layout_width="fill_parent"
                android:text="Unlock all courses for 4$ for month"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/java_core_upgrade_button"
                android:onClick="onInfiniteGasButtonClicked"
                android:text="Unlock Java core for 2$ for month"
                android:background="@color/main_color_100"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
</FrameLayout>
